---
import BaseLayout from '../layouts/BaseLayout.astro';
import HorizontalCard from '../components/HorizontalCard.astro';
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hey there ðŸ‘‹</div>
    <div class="text-5xl font-bold">I'm Vincent Chuck</div>
    <div class="text-3xl py-3 font-bold">Web Developer</div>
    <div class="py-2">
      <text class="text-lg">
        From actuarial analyst to coding enthusiast - I discovered my passion in
        coding while writing Excel macros, Windows batch scripts, and custom C#
        spreadsheet functions.
      </text>
    </div>
  </div>

  <div class="flex">
    <div class="text-3xl w-full font-bold mb-2">Project Highlights</div>
    <a href="/projects" class="hidden md:flex text-xl btn btn-accent"
      >View All</a
    >
  </div>

  <HorizontalCard
    title="Rainforest Books"
    img="/rainforestBooks/rainforestBooks.png"
    desc="Full stack Amazon clone."
    url="/projects/rainforestbooks"
    target="_self"
    badge="Live Demo"
  />
  <div class="divider my-0"></div>

  <HorizontalCard
    title="Todo App"
    img="/todoApp/todoApp.jpeg"
    desc="A simple todo app with email link and Google login, and optimistic updates."
    url="/projects/todoapp"
    target="_self"
    badge="Live Demo"
  />
  <div class="divider my-0"></div>

  <div class="flex justify-center mt-2 md:hidden">
    <a href="/projects" class="text-xl btn btn-wide btn-accent">All Projects</a>
  </div>
</BaseLayout>
